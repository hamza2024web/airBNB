{% include 'Layout/header.php' %}

<section class="p-6 bg-gray-100 min-h-screen">
    <div class="max-w-7xl mx-auto grid grid-cols-1 md:grid-cols-4 gap-6">
        <!-- Sidebar Filters -->
        <aside class="bg-white p-4 rounded-2xl shadow-md" aria-labelledby="filter-heading">
            <h2 id="filter-heading" class="text-lg font-semibold mb-3">Availability</h2>
            <form>
                <label for="from-date" class="block text-gray-600 text-sm">From</label>
                <input id="from-date" type="date" class="w-full p-2 mt-1 border rounded-lg focus:ring-2 focus:ring-blue-300" />
                
                <label for="to-date" class="block text-gray-600 text-sm mt-3">To</label>
                <input id="to-date" type="date" class="w-full p-2 mt-1 border rounded-lg focus:ring-2 focus:ring-blue-300" />
                
                <button type="submit" class="w-full mt-4 bg-blue-500 text-white py-2 rounded-lg hover:bg-blue-600 transition">
                    Check Availability
                </button>
            </form>
            
            <h2 class="text-lg font-semibold mt-6">Theme</h2>
            <fieldset class="mt-2 space-y-2 text-gray-600">
                <legend class="sr-only">Choose a theme</legend>
                <label class="flex items-center">
                    <input type="checkbox" class="mr-2"> Water activities
                </label>
                <label class="flex items-center">
                    <input type="checkbox" class="mr-2"> Nature
                </label>
                <label class="flex items-center">
                    <input type="checkbox" class="mr-2"> Adrenaline
                </label>
                <label class="flex items-center">
                    <input type="checkbox" class="mr-2"> Food
                </label>
            </fieldset>
        </aside>
        
        <!-- Search Results -->
        <main class="md:col-span-3">
            <header class="flex justify-between items-center mb-4">
                <h1 class="text-xl font-semibold">Things To Do In London</h1>
                <label for="sort-options" class="sr-only">Sort by</label>
                <select id="sort-options" class="p-2 border rounded-lg focus:ring-2 focus:ring-blue-300">
                    <option>Popularity</option>
                    <option>Price: Low to High</option>
                    <option>Price: High to Low</option>
                </select>
            </header>
            
            <section class="space-y-[1rem]" aria-labelledby="activities-heading">
                <h2 id="activities-heading" class="sr-only">Activity Listings</h2>
                
                {% for announce in rows %}
                    <article class="bg-white p-4 rounded-2xl shadow-md flex gap-4 hover:scale-105 transition transform">
                        <img src="{{ announce.photo }}" class="rounded-lg" alt="{{ announce.title }} image" />
                        <div>
                            <span class="text-sm bg-green-100 text-green-800 px-2 py-1 rounded-lg">
                                {{ announce.category }}
                            </span>
                            <h3 class="text-lg font-semibold mt-2">{{ announce.title }}</h3>
                            <p class="text-gray-600 text-sm">
                                {{ announce.duration }} | {{ activity.type }} | {{ activity.plan }}
                            </p>
                            <p class="text-blue-500 font-semibold mt-2">{{ announce.price }}</p>
                        </div>
                    </article>
                {% endfor %}
            </section>
        </main>
    </div>
</section>

{% include 'Layout/footer.php' %}
