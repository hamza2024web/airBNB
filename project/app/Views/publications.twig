{% include 'Layout/header.php' %}

<section class="p-6 bg-gray-100 min-h-screen">
    <div class="max-w-7xl mx-auto grid grid-cols-1 md:grid-cols-4 gap-[3rem]">
        <!-- Sidebar Filters -->
        <aside class="bg-white p-4 rounded-2xl shadow-lg" aria-labelledby="filter-heading">
            <h2 id="filter-heading" class="text-lg font-semibold mb-4">Availability</h2>
            <form>
                <label for="from-date" class="block text-gray-600 text-sm">From</label>
                <input id="from-date" type="date" class="w-full p-2 mt-1 border rounded-lg focus:ring-2 focus:ring-green-500 transition" />
                
                <label for="to-date" class="block text-gray-600 text-sm mt-3">To</label>
                <input id="to-date" type="date" class="w-full p-2 mt-1 border rounded-lg focus:ring-2 focus:ring-green-500 transition" />
                
                <button type="submit" class="w-full mt-4 bg-green-500 text-white py-2 rounded-lg hover:bg-green-600 transition transform hover:scale-105">
                    Check Availability
                </button>
            </form>
            
            <h2 class="text-lg font-semibold mt-6">Theme</h2>
            <fieldset class="mt-2 space-y-2 text-gray-600" id='filter'>
                {% for category in categories %}
                <label class="flex items-center">
                    <input type="checkbox" value='{{category.categoryname}}' onclick='modifyText(this.value)' class="mr-2" /> {{category.categoryname}}
                </label>
                {% endfor %}
            </fieldset>
        </aside>
        
        <!-- Search Results -->
        <main class="md:col-span-3">
            <header class="flex justify-between items-center mb-4">
                <h1 class="text-xl font-semibold">Things To Do In London</h1>
                <label for="sort-options" class="sr-only">Sort by</label>
                <select id="sort-options" class="p-2 border rounded-lg focus:ring-2 focus:ring-green-500 transition">
                    <option>Popularity</option>
                    <option>Price: Low to High</option>
                    <option>Price: High to Low</option>
                </select>
            </header>
            
            <section class="space-y-[1rem]" aria-labelledby="activities-heading">
                <h2 id="activities-heading" class="sr-only">Activity Listings</h2>
                
                {% for announce in annonces %}
                <article class="bg-white p-4 rounded-2xl shadow-lg flex gap-4 hover:shadow-xl transition transform hover:scale-105 relative">
                    <!-- Image -->
                    <img src="{{ announce.photo }}" class="rounded-lg w-[20rem] h-[12rem] object-cover" alt="{{ announce.titleAnnonce }} image" />

                    <!-- Content -->
                    <div class="flex-1">
                        <!-- Category and Promotion Badge -->
                        <div class="flex justify-between items-start">
                            <span class="text-sm bg-green-100 text-green-800 px-2 py-1 rounded-lg">
                                {{ announce.categoryname }}
                            </span>
                            {% if announce.titlePromotion %}
                                <span class="text-sm bg-red-100 text-red-800 px-2 py-1 rounded-lg">
                                    {{ announce.titlePromotion }} ({{ announce.pourcentage_promotion }}% off)
                                </span>
                            {% endif %}
                        </div>

                        <!-- Title and Description -->
                        <h3 class="text-lg font-semibold mt-2">{{ announce.titleAnnonce }}</h3>
                        <p class="text-gray-600 text-sm mt-1">{{ announce.description }}</p>

                        <!-- Price and Availability -->
                        <div class="mt-2">
                            <p class="text-blue-500 font-semibold">
                                {% if announce.titlePromotion %}
                                    <span class="line-through text-gray-400 mr-2">{{ announce.prix }}</span>
                                    <span>{{ announce.prix * (1 - announce.pourcentage_promotion / 100) }}</span>
                                {% else %}
                                    {{ announce.prix }} â‚¬
                                {% endif %}
                            </p>
                        </div>

                        <!-- Promotion End Date -->
                        {% if announce.promotion_id is not null and (announce.date_de_fin|date('U') < "now"|date('U')) %}
                            <p class="text-sm text-gray-500 mt-2">
                                Promotion valable jusqu'au {{ announce.date_de_fin }}
                            </p>
                            <p class="text-[1rem] text-[red] mt-2">
                                Promotion: {{ announce.pourcentage_promotion }}%
                            </p>
                        {% endif %}
                         
                        <p class="text-[1rem] text-[red] absolute right-5 top-[50%] translate-y-[-50%]">
                            {{ announce.localisation }}
                        </p>
                        <!-- See More Button -->
                        <a href="/details/{{ announce.idannonce }}" class="text-blue-500 absolute right-5 bottom-5 font-semibold mt-2 flex items-center gap-2 hover:text-blue-700 transition">
                            <i class="fas fa-arrow-right"></i>
                        </a>
                    </div>
                </article>
                {% endfor %}
            </section>
        </main>
    </div>
</section>

<script>
    function modifyText(value) {
        console.log(value);
    }
    const el = document.getElementById("filter");
    el.addEventListener("click", modifyText);
</script>

